<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="com.ning.http.client" level="WARN"/><!-- turn off Ning HTTP output -->
    <logger name="org.overviewproject.documentcloud.DocumentRetriever" level="OFF"/><!-- we expect errors -->

    <!-- try to be silent during tests -->
    <logger name="WORKER" level="OFF"/>
</configuration>
